<div class="new_post">
  <div class="form__title">
    <h3>投稿編集<h3>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-3 new__form">
      <div class="new__form__box">
        <%= form_with model: @post, local: true do |f| %>
          <div class="form-group new__form__title-box">
            <%= f.label :game_title, "ゲームタイトル", class: "new__form__title-box--title" %>
            <span class="form-require">必須</span><br />
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group new__form__content-box">
            <%= f.label :content, "募集内容", class: "new__form__content-box--content" %>
            <span class="form-require">必須</span><br />
            <%= f.text_area :body, class: "form-control", id: "content-box--text" %>
          </div>
          <div class="form-group new__form__code-box">
            <%= f.label :code, "招待コード", class: "new__form__code-box--code" %>
            <span class="form-optional">任意</span><br />
            <%= f.text_field :invitation, class: "form-control", placeholder: "フレンドコードなど" %>
          </div>
          <div class="form-group new__form__image-box">
            <%= f.label :inputfile, "画像を選択", class: "new__form__image-box--image"%>
            <span class="form-optional">任意</span><br />
            <div class="input-group" id="file">
              <div class="custom-file">
                <%= f.file_field :image, class: "custom-file-input", id: "cutomfile", accept: "image/*", name: "cutomfile[]" %>
                <label class="custom-file-label" for="customfile" data-browse="参照">ファイル1つ選択...</label>
              </div>
              <div class="input-group-append">
                <button type="button" class="btn btn-outline-secondary reset">取消</button>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "投稿", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>