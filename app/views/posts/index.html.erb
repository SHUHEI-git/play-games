<div class="main">
  <div class="container main__content">
    <div class="main__content__title">
      <h2 class="title_name">
        <%= icon("far", "clone") + "新着募集" %>
      </h2>
    </div>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-sm-12 col-md-6 col-lg-4 main__content__box">
          <%= link_to "/posts/#{post.id}",class: "main__content__box__link", method: :get do %>
            <div class="rounded main__content__box__field">
              <div class="main__content__box__field__user">
                <p class="box__field__user--name">ユーザー名</p>
                <p class="box__field__user--date"><%= post.created_at.to_s(:datetime_jp) %></p>
              </div>
              <div class="main__content__box__field--title">
                <p><%= post.title %></p>
              </div>
              <%= simple_format(post.body, class: "main__content__box__field--content") %>
              <div class="main__content__box__field--comment">
                <%= icon("far", "comment-dots") + "コメント○件"%>
              </div>
            </div>
          <% end %>
        </div>
      <% end %> 
    </div>
  </div>
</div>