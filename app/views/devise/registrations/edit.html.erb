<div class="container sign_up">
  <div class="row">
    <div class="sign_up__title">
      <h3>ユーザー編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-3 user_form">
      <div class="user_form__inner">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group user_form__inner__box">
            <%= f.label :name, "ニックネーム" %><em>(8文字以内)</em>
            <span class="form-require">必須</span><br />
            <%= f.text_field :name, autofocus: true, maxlength: "8", class: "user_form__inner__box--input" %>
          </div>

          <div class="form-group user_form__inner__box">
            <%= f.label :email, "メールアドレス" %>
            <span class="form-require">必須</span><br />
            <%= f.email_field :email, class: "user_form__inner__box--input" %>
          </div>

          <div class="form-group user_form__inner__box">
            <%= f.label :code, "フレンドコード" %>
            <span class="form-optional">任意</span><br />
            <%= f.text_field :friend_code, class: "user_form__inner__box--input" %>
          </div>

          <div class="form-group user_form__inner__box">
            <%= f.label :inputfile, "画像を選択", class: "user_form__inner__box--image"%>
            <span class="form-optional">任意</span><br />
            <div class="custom-file">
              <%= f.file_field :image, class: "custom-file-input" %>
              <label class="custom-file-label" for="inputfile">画像選択</label>
            </div>
          </div>

          <div class="form-group text-center">
            <%= f.submit "更新", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
