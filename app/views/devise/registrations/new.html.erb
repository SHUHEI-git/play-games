<div class="container sign_up">
  <div class="row">
    <div class="sign_up__title">
      <h3>ユーザー新規登録</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-3 user_form">
      <div class="user_form__inner">
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group user_form__inner__box">
            <%= f.label :name, "ニックネーム" %><em>(8文字以内)</em>
            <span class="form-require">必須</span><br />
            <%= f.text_field :name, autofocus: true, maxlength: "8", required: true, class: "user_form__inner__box--input" %>
          </div>

          <div class="form-group user_form__inner__box">
            <%= f.label :email, "メールアドレス" %>
            <span class="form-require">必須</span><br />
            <%= f.email_field :email, required: true, class: "user_form__inner__box--input" %>
          </div>

          <div class="form-group user_form__inner__box">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <span class="form-require">必須</span><br />
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "user_form__inner__box--input" %>
          </div>

          <div class="form-group user_form__inner__box">
            <%= f.label :password_confirmation, "パスワード確認" %>
            <span class="form-require">必須</span><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user_form__inner__box--input" %>
          </div>
          
          <div class="form-group user_form__inner__box">
            <%= f.label :code, "フレンドコード" %>
            <span class="form-optional">任意</span><br />
            <%= f.text_field :friend_code, class: "user_form__inner__box--input" %>
          </div>

          <div class="form-group user_form__inner__box">
            <%= f.label :inputfile, "画像を選択", class: "label-name"%>
            <span class="form-optional">任意</span><br />
            <div class="input-group" id="file">
              <div class="custom-file">
                <%= f.file_field :image, class: "custom-file-input", id: "cutomfile", accept: "image/*", name: "cutomfile[]" %>
                <label class="custom-file-label" for="customfile" data-browse="参照">ファイル1つ選択...</label>
              </div>
              <div class="input-group-append">
                <button type="button" class="btn btn-outline-secondary reset">取消</button>
              </div>
            </div>
          </div>

          <div class="form-group text-center">
            <%= f.submit "登録する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>