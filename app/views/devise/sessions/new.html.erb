<div class="container login">
  <div class="row">
    <div class="login__title">
      <h3>ログイン</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-3 user_form">
      <div class="user_form__inner">
        <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <div class="form-group user_form__inner__box">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, class: "user_form__inner__box--input" %>
          </div>

          <div class="form-group user_form__inner__box">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "user_form__inner__box--input" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group user_form__inner__box">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログイン状態を維持する" %>
            </div>
          <% end %>

          <div class="form-group text-center">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
