<header>
  <div class="header__box">
    <%= link_to root_path, class: "header__box__logo" do %> 
      <%= image_tag '/image/logo_2575767_web.png', class: "header__box__logo--image", alt: 'タイトルロゴ' %>
    <% end %>
    <ul class="header__box__list">
      <li class="header__box__list__each">
        <%= link_to root_path, class: "icon-link" do %>
          <%= icon("fas", "list") %>
          <%= "投稿一覧" %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li class="header__box__list__each">
          <%= link_to new_post_path, class: "icon-link" do %>
            <%= icon("fas", "edit") %>
            <%= "新規投稿" %>
          <% end %>
        </li>
        <li class="header__box__list__each">
          <%= link_to "", class: "icon-link" do %>
            <%= icon("fas", "user") + " ユーザー名" %>
          <% end %>
        </li>
      <% else %>
        <li class="header__box__list__each">
          <%= link_to "", class: "icon-link" do %>
            <%= icon("fas", "sign-in-alt") %>
            <%= "ログイン" %>
          <% end %>
        </li>
        <li class="header__box__list__each">
          <%= link_to new_user_registration_path, class: "icon-link" do %>
            <%= icon("fas", "user-plus") %>
            <%= " 新規登録" %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%# 後でform_withにする %>
    <div class="form">
      <form action="#" method="GET" class="form__search">
        <input class="form__search--text" type="text" placeholder="募集検索">
        <input class="form__search--submit" type="submit" value="検索">
      </form>
    </div>
  </div>
</header>