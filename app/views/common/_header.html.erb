<header>
  <div class="header__box">
    <%= link_to root_path, class: "header__box__logo" do %> 
      <%= image_tag '/image/logo_2575767_web.png', class: "header__box__logo--image", alt: 'タイトルロゴ' %>
    <% end %>
    <ul class="header__box__list">
      <li class="header__box__list__each">
        <%= link_to root_path, class: "icon-link" do %>
          <%= icon("fas", "list") %>
          <%= "投稿一覧" %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li class="header__box__list__each">
          <%= link_to new_post_path, class: "icon-link" do %>
            <%= icon("fas", "edit") %>
            <%= "新規投稿" %>
          <% end %>
        </li>
        <li class="header__box__list__each user_name">
          <%= icon("fas", "user") %>
          <%= current_user.name %>
          <div class="user_link">
            <p class="user_link__inner user_link__inner--top">
              <%= link_to "マイページ", user_path(current_user.id) %>
            </p>
            <p class="user_link__inner">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </p>
          </div>
        </li>
      <% else %>
        <li class="header__box__list__each">
          <%= link_to new_user_session_path, class: "icon-link" do %>
            <%= icon("fas", "sign-in-alt") %>
            <%= "ログイン" %>
          <% end %>
        </li>
        <li class="header__box__list__each">
          <%= link_to new_user_registration_path, class: "icon-link" do %>
            <%= icon("fas", "user-plus") %>
            <%= " 新規登録" %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%# 後でform_withにする %>
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "input-group") do |f| %>
      <%= f.text_field :keyword, placeholder: "投稿を検索する", class: "form-control" %>
      <span class="input-group-btn">
        <%= f.submit "検索", class: "btn btn-default" %>
      </span>
    <% end %>
  </div>
</header>