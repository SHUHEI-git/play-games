<div class="container mt-5 user_show">
  <div class="row user_top">
    <div class="col-sm-12 col-md-5 user_top__icon">
      <% if @user.image? %>
        <img src='<%= @user.image %>' class="rounded-circle user_top__icon--image" alt="ユーザーアイコン">
      <% else %>
        <img src="/assets/default.png" class="rounded-circle user_top__icon--image" alt="ユーザーアイコン">
      <% end %>
    </div>
    <div class="col-sm-12 col-md-7 user_top__item">
      <p class="user_top__item__name"><%= @user.name %></p>
      <p><%= "フレンドコード：#{@user.friend_code}" %></p>
    </div>
  </div>

  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a href="#post" class="nav-link active">
        <div class="user-status">
          <span class="user-status__name">投稿</span>
        </div>
      </a>
    </li>
    <li class="nav-item">
      <a href="#" class="nav-link">
        <div class="user-status">
          <span class="user-status__name">いいね</span>
        </div>
      </a>
    </li>
  </ul>

  <div class="row tab-content user_conts">
    <% @posts.each do |post| %>
      <div class="col-sm-12 col-md-6 col-lg-4 user_conts__box tab-pane active" id="post">
        <%= link_to "/posts/#{post.id}",class: "user_conts__box__link", method: :get do %>
          <div class="rounded user_conts__box__link__field">
            <div class="user_conts__box__link__field--title">
              <p><%= post.title %></p>
            </div>
            <%= simple_format(post.body, class: "user_conts__box__field--content") %>
            <div class="user_conts__box__link__field--comment">
              <%= icon("far", "comment-dots") + "コメント○件"%>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
