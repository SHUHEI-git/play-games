<div class="row">
  <% users.each do |user| %>
    <div class="col-md-8 offset-md-2">
      <div class="show_follower">
        <%= link_to user_path(user) do %>
          <% if user.image? %>
            <img src='<%= user.image.url %>' class="rounded-circle show_follower__user_icon" alt="ユーザーアイコン">
          <% else %>
            <%= image_tag asset_path('default.png'), class: "rounded-circle show_follower__user_icon", alt: "ユーザーアイコン" %>
          <% end %>
          <%= "#{user.name}" %>
        <% end %>
        <div class="show_follower__follow-btn">
          <%= render "follow_form" %>
        </div>
      </div>
    </div>
  <% end %>
</div>